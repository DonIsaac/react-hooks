{
  "name": "@donisaac/react-hooks",
  "description": "A library of assorted React hooks",
  "version": "1.2.1",
  "homepage": "https://github.com/DonIsaac/react-hooks#readme",
  "keywords": [
    "react",
    "hooks"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "packageManager": "yarn@3.2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DonIsaac/react-hooks.git"
  },
  "files": [
    "dist",
    "src"
  ],
  "author": {
    "name": "Donald Isaac",
    "url": "https://donisaac.dev"
  },
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "build:docs": "typedoc --options typedoc.json src/index.ts",
    "lint": "eslint src",
    "lint:fix": "yarn lint --fix",
    "tc": "tsc -p tsconfig.strict.json",
    "clean": "rimraf .cache dist coverage *.tgz *.tsbuildinfo || true",
    "changelog": "auto-changelog -p && git add CHANGELOG.md",
    "publish:docs": "gh-pages --dir docs",
    "prepare": "husky install"
  },
  "lint-staged": {
    "src/*.{ts,tsx}": "eslint --fix",
    "package.json": "yarn changelog"
  },
  "devDependencies": {
    "@shopify/jest-dom-mocks": "^4.0.2",
    "@testing-library/dom": "^8.19.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^28.1.8",
    "@types/jsdom": "^16.2.15",
    "@types/node": "^18.0.3",
    "@types/react": "^18.0.15",
    "@types/react-test-renderer": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "auto-changelog": "^2.4.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.9.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "gh-pages": "^4.0.0",
    "husky": "^8.0.2",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.2",
    "jest-fetch-mock": "^3.0.3",
    "jsdom": "^20.0.3",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-test-renderer": "^18.2.0",
    "rimraf": "^3.0.2",
    "synchronous-promise": "^2.0.16",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.8.2",
    "typedoc": "^0.23.21",
    "typescript": "^4.9.3"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  }
}
